<div class="header-content">

	<div class="header-top color_background_light">
		<div class="container">
			<div class="header-top-content">
				<div class="left-side">
					<div class="icon shadow">{% render 'icon-phone' %}</div>
					<div class="text">
						{{ section.settings.call-text }}
					</div>
				</div>
				<div class="logo">
					<a href="/">
						<img class="lazyload"
							 src="{{ section.settings.logo | img_url: '100x50' }}"
							 data-src="{{ section.settings.logo | img_url: '360x90' }}"
							 alt="{{ section.settings.logo.alt }}">
					</a>
				</div>
				<div class="right-side">
					<div class="icon shadow">{% render 'icon-map' %}</div>
					<div class="text">
						{{ section.settings.map-text }}
					</div>
				</div>
			</div>

		</div>
	</div>

	<div class="header-menu-container">
		<div class="container">
			<div class="header-menu">
				{% for link in linklists[section.settings.menu].links %}
					{% assign child_list_handle = link.title | handleize %}
					{% if linklists[child_list_handle].links != blank %}
						<a href="{{ link.url }}"
						   class="{% if link.current %}active{% endif %}">{{ link.title }}</a>
						[{% for childlink in linklists[child_list_handle].links %}
						<a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
					{% endfor %}]
					{% else %}
						<a href="{{ link.url }}"
						   class="{% if link.current %}active{% endif %}">{{ link.title }}</a>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>


{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
        },
        {
            "type": "html",
            "id": "call-text",
            "label": "Call text",
            "default": "<div><p>Some HTML content</p></div>"
        },
        {
            "type": "html",
            "id": "map-text",
            "label": "Map text",
            "default": "<div><p>Some HTML content</p></div>"
        },
        {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
        }
    ]
}
{% endschema %}