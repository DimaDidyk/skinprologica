html, body{
  margin: 0;
  padding: 0;

}

/**  Fonts   */
{% assign font_n3 = settings.font_n3 %}
{% assign font_n4 = settings.font_n4 %}
{% assign font_n6 = settings.font_n6 %}
{{ font_n3 | font_face }}
{{ font_n4 | font_face }}
{{ font_n6 | font_face }}

input,
textarea,
select,
.form-status,
body{
  font-family: "Open Sans";
}

/**  Colors
*/
$color_background: {{ settings.color_background }};
$color_background_light: {{ settings.color_background_light }};
$color_heading: {{ settings.color_heading }};
$color_link: {{ settings.color_link }};
$color_link_active: {{ settings.color_link_active }};
$color_body_text: {{ settings.color_body_text }};
$color_body_text_2: {{ settings.color_body_text_2 }};
$color_body_text_3: {{ settings.color_body_text_3 }};
$color_body_text_light: {{ settings.color_background_light }};
$color_first: {{ settings.color_first }};
$color_second: {{ settings.color_second }};
$color_borders: {{ settings.color_borders }};

$border-custom-color: #9A8F8F;
.color_background{
  background: $color_background;
}
.color_background_light{
  background: $color_background_light;
}
.color_first{
  color: $color_first;
}

.shadow{
  box-shadow: 0px 10px 30px rgba(188, 104, 102, 0.17);
}
.shadow-2{
  box-shadow: 0px 5px 50px rgba(0, 0, 0, 0.05);
}

/**  Typography
*/
body{
  background: $color_background;
}
h1, h2, h3, h4, h5, h6 {
  color: $color_body_text;
  margin-top: 20px;
  margin-bottom: 20px;
  font-weight: 300;
}
h1, .h1{
  font-size: 35px;
  line-height: 1;
  margin-top: 0;
}
h2, .h2{
  font-size: 50px;
  line-height: 55px;
}
h3, .h3{
  font-size: 35px;
  line-height: 40px;
}
h4, .h4{
  font-size: 32px;
  line-height: 30px;
}

p{
  margin: 0;
  padding: 0;
}
a{
  color: $color_link;
  outline: none;
  text-decoration: none;
}
a.acive{
  color: $color_link_active;
}
.align-center{
  text-align: center;
}
.align-right{
  text-align: right;
}
.btn{
  font-size: 16px;
  line-height: 22px;
  min-width: 200px;
  box-sizing: border-box;
  padding: 14px 50px;
  font-weight: bold;
  border-radius: 30px;
  text-align: center;
  width: max-content;
  cursor: pointer;
  outline: none;
  border: 0;
  background: $color_background;
  color: $color_first;
  &.btn-primary{
    background: $color_first;
    color: $color_background;
  }
  &.btn-secondary{
    background: $color_second;
    color: $color_background;
  }
  &.btn-center{
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
}

// forms
.form__input-row{
  display: flex;
  justify-content: space-between;
  width: 100%;
  .form__input-wrapper{
    width: calc(50% - 30px);
    margin-bottom: 30px;
  }
  .form__input-wrapper-100{
    width: 100%;
  }
}
textarea,
input{
  outline: none;
  padding: 13px 0;
  border: none;
  width: 100%;
  border-bottom: 1px solid $border-custom-color;
  font-size: 14px;
  line-height: 14px;
  display: flex;
  align-items: center;
  color: $color_body_text;
}

// responsive iframe
.embed-responsive{
  width: 100%;
  position: relative;
  padding-bottom: 56.25%;
  iframe{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}


/**  Grid   */
.container-fluid,
.container{
  max-width: 100%;
  padding-left: 20px;
  padding-right: 20px;
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
}
.container-fluid{
  width: 100%;
}
.container{
  width: 1170px;
}
.container-fluid.container-no-padding,
.container.container-no-padding{
  padding-left: 0;
  padding-right: 0;
}
.no-padding{
  padding: 0;
}
.no-margin{
  margin: 0;
}
img{
  max-width: 100%;
}
.h-100{
  height: 100%;
}


/**  Header */
.header-top{
  height: 94px;
  display: flex;
  align-items: center;
  box-shadow: 0px 5px 50px rgba(0, 0, 0, 0.05);
  .header-top-content {
    display: flex;
    .left-side {
      flex: 1;
      display: flex;
      align-items: center;
    }
    .logo {
      width: 180px;
    }
    .right-side {
      flex: 1;
      display: flex;
      justify-content: flex-end;
      align-items: center;
    }
  }
  .icon{
    width: 44px;
    height: 44px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    margin-right: 32px;
  }
  .text{
    font-size: 14px;
    line-height: 19px;
  }
}
.header-menu-container{
  .header-menu{
    display: flex;
    justify-content: center;
    height: 58px;
    a{
      position: relative;
      display: flex;
      align-items: center;
      height: 100%;
      font-size: 14px;
      line-height: 19px;
      margin-left: 15px;
      margin-right: 15px;
      text-transform: uppercase;
      &.active{
        color: $color_first;
        font-weight: bold;
      }
      &::after{
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: $color_first;
        transition: all .3s;
      }
      &:hover::after{
        width: 100%;
      }
    }
  }
}

/**  Section: Hero   */
.hero{
  position: relative;
  height: 644px;
  .bg-image{
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-position: right;
    object-fit: contain;
  }
  .hero-sub-bg{
    position: absolute;
    top: 0;
    right: 10px;
    z-index: -2;
  }
  .gradient{
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: -2;
    background: linear-gradient(278.92deg, #994847 5.29%, #CA9097 88.07%);
  }
  &.hero-index .gradient{
    background: linear-gradient(180deg, #959B9B 0%, #919294 51.63%, #848484 98.64%);
  }
  .hero-content{
    display: flex;
    justify-content: center;
    flex-direction: column;
    color: $color_body_text_light;
    width: 510px;
    font-weight: lighter;
    h2{
      color: $color_body_text_light;
      font-weight: lighter;
      margin-bottom: 20px;
    }
    p{
      text-align: center;
      font-size: 20px;
      line-height: 27px;
    }
    .btn{
      margin-top: 50px;
    }
  }

}

/**  Section: Before and After   */
.before-and-after-section{
  padding-top: 50px;
  padding-bottom: 50px;
  .before-container{
    display: flex;
    justify-content: space-between;
    margin-top: 40px;
    flex-wrap: wrap;
    .item{
      box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.1);
      border-radius: 20px;
      width: calc(20% - 12px);
      margin-bottom: 80px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      img{
        width: 100%;
      }
      .logo{
        width: 80px;
        margin: 12px auto 8px;
        img{
          object-fit: contain;
        }
      }
      .title{
        padding-left: 22px;
        padding-right: 22px;
        font-size: 16px;
        line-height: 22px;
        text-align: center;
        padding-bottom: 18px;
        flex: auto;
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }
  }
}

/**  Section: Our services   */
.our-services-section{
  padding-top: 50px;
  padding-bottom: 150px;
  .sub-text{
    width: 390px;
    max-width: 100%;
    color: $color_body_text_2;
    margin: 10px auto 0;
  }
  .custom-services{
    display: grid;
    grid-template-columns: 1fr 500px 1fr;
    margin-top: 60px;
    .service-item{
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      .title{
        margin-top: 10px;
        font-size: 25px;
        line-height: 34px;
      }
    }
    .service-item:nth-child(2n - 1){
      align-items: flex-end;
      .title{
        text-align: right;
      }
    }
    .service-item:nth-child(3){
      padding-right: 40px;
    }
    .service-item:nth-child(4){
      padding-left: 40px;
    }
    .main-image{
      grid-column: 2;
      grid-row: 1/ span 3;
      margin: 0 auto;
    }
  }
}

/**  Section: Text with Image   */
.text-with-image-section{
  position: relative;
  .text-left-side{
    position: absolute;
    width: 100%;
    left: 0;
    top: 0;
    bottom: 0;
    height: 100%;
  }
  .text-content{
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-right: 64px;
    box-sizing: border-box;
    .title{
      margin-bottom: 20px;
    }
    .logo{
      margin: 20px auto;
    }
    .text{
      font-size: 16px;
      line-height: 30px;
    }
    .btn{
      display: block;
      margin-top: 50px;
    }
  }
  .image-content{
    position: relative;
    height: 0;
    width: 50%;
    padding-bottom: 45.8%;
    margin-right: 0;
    margin-left: auto;
    img{
      position: absolute;
      right: 0;
      width: 100%;
    }
  }

  &.inverse{
    .text-left-side{
      .text-content{
        float: right;
        padding-right: 0;
        padding-left: 64px;
      }
    }
    .image-content{
      padding-bottom: 37%;
      border-radius: 20px;
      overflow: hidden;
      margin-right: auto;
      margin-left: 0;
    }
  }
}

/** Section: Video   */
.section-video{
  padding-top: 140px;
  padding-bottom: 100px;
  position: relative;
  .section-video-bg{
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 0 -150px;
  }
  .content{
    .title{
      width: 800px;
      max-width: 100%;
      margin: 30px auto;
      strong{
        color: $color_first;
      }
    }
    img.logo{
      margin-top: 10px;
      float: right;
    }
  }
}

/** Section: Team   */
.section-team{
  margin-bottom: 100px;

  .text{
    font-size: 16px;
    line-height: 22px;
    text-align: center;
    width: 540px;
    margin: 30px auto 90px;
    color: $color_body_text_2;
  }

  .employers{
    display: flex;
    flex-wrap: wrap;
    .employee-item{
      width: 25%;
      text-align: center;
      .avatar-container{
        position: relative;
        .vector-bg{
          position: absolute;
          z-index: -1;
          width: 100%;
          max-width: 200px;
          left: 0;
          top: -24px;
          margin: 0 auto;
          right: 0;
        }
        .avatar{
          width: 148px;
          height: 148px;
          border-radius: 50%;
          overflow: hidden;
          border: 4px solid $color_first;
        }
      }
      .info{
        width: 200px;
        margin: 30px auto;
        text-align: center;
        .name{
          font-family: 'Allura', cursive;
          font-size: 30px;
          line-height: 40px;
        }
        .employee-position{
          font-weight: bold;
          font-size: 14px;
          line-height: 19px;
          margin-bottom: 10px;
          color: $color_first;
        }
        .description{
          font-size: 14px;
          line-height: 19px;
          color: $color_body_text_2;
        }
      }

      // director
      &.director{
        width: 100%;
        margin-bottom: 120px;
        display: flex;
        justify-content: center;
        text-align: left;
        .avatar {
          width: 184px;
          height: 184px;
        }
        .vector-bg{
          width: 270px;
          max-width: 260px;
          left: -25px;
          top: -32px;
        }
        .info{
          width: 236px;
          max-width: 100%;
          text-align: left;
          margin: 0 0 0 50px;
          display: flex;
          flex-direction: column;
          justify-content: center;
          .description{
            padding-right: 20px;
          }
        }
      }
    }
  }
}

/**  Section: Testimonials   */
.testimonials-section{
  padding: 70px 20px;
  box-sizing: border-box;
  position: relative;
  .testimonials-slider{
    padding-bottom: 50px;
    .item{
      cursor: default;
      img.avater{
        display: block;
        width: 134px;
        height: 134px;
        margin: 10px auto;
        border-radius: 50%;
      }
      .stars{
        display: flex;
        justify-content: center;
        margin-top: 20px;
        margin-bottom: 20px;
        svg{
          margin-left: 5px;
          margin-right: 5px;
        }
        .opacity{
          opacity: .5;
        }
      }
      .comment{
        font-size: 20px;
        line-height: 27px;
      }
      .name{
        font-family: 'Allura', cursive;
        font-size: 35px;
        line-height: 44px;
        margin-top: 25px;
      }
    }
  }
}

/**  Section: Instagram   */
.instagram-section{
  padding-top: 50px;
  padding-bottom: 50px;
}

/**  Section: Rich text   */
.rich-text{
  padding-top: 76px;
  padding-bottom: 50px;

  .rich-text-content{
    width: 960px;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;

    .sub-text{
      width: 400px;
      max-width: 100%;
      margin: 12px auto 40px;
      font-size: 17px;
      line-height: 23px;
      color: $color_body_text_2;
    }
  }

  .text-content{
    font-size: 16px;
    line-height: 30px;
    padding-top: 10px;
    padding-bottom: 10px;
  }

  .buttons{
    display: flex;
    padding-top: 30px;
    padding-bottom: 30px;
    justify-content: center;
    .btn{
      margin-left: 10px;
      margin-right: 10px;
    }
  }
}

/**  Section: Gift   */
.gift-section{
  padding-bottom: 180px;
  padding-top: 100px;
  .gift-content{
    background: linear-gradient(96.71deg, #CD969D 5.08%, #913B39 105.7%), linear-gradient(96.71deg, #CD969D 5.08%, #913B39 105.7%);
    border-radius: 30px;
    padding-top: 40px;
    padding-bottom: 90px;
    color: $color_body_text_light;
    position: relative;
    .bg-image{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .text-content{
      width: 600px;
      max-width: 100%;
      margin: 0 auto;
    }
    p{
      font-size: 20px;
      font-weight: lighter;
    }
    h3{
      font-size: 40px;
      font-weight: 400;
      color: $color_body_text_light;
    }
  }
}

/**  Section: Contact Us   */
.section-contact-us{
  h3{
    padding-top: 50px;
    padding-bottom: 50px;
  }
  .contact-grid{
    display: flex;
    justify-content: space-between;
    padding-bottom: 15px;
    .contact-item{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 50px 15px;
      width: calc(33.33% - 12px);
      border: 0.5px solid $color_first;
      box-sizing: border-box;
      box-shadow: 0px 10px 30px rgba(138, 136, 136, 0.2);
      border-radius: 20px;
      svg{
        width: 28px;
        height: 28px;
        margin-bottom: 15px;
      }
    }
    .schedule{
      font-size: 12px;
      margin-top: 4px;
      strong{
        font-weight: lighter;
      }
    }
  }
}

/**  Footer   */
.footer-content{
  padding-top: 44px;
  padding-bottom: 30px;

  display: flex;
  .left-menu{
    flex: 1;
  }
  .footer-center-content{
    display: flex;
    flex-direction: column;
    align-items: center;
    .footer-logo{
      width: 180px;
    }
    .list{
      display: flex;
      margin-top: 50px;
      font-weight: 300;
      font-size: 14px;
      line-height: 19px;
      .separator{
        display: block;
        width: 1px;
        height: 18px;
        margin-left: 10px;
        margin-right: 10px;
        background: $color_borders;
      }
    }
    .copyright{
      margin-top: 20px;
      margin-bottom: 20px;
      font-weight: 300;
      font-size: 12px;
      line-height: 16px;
      color: $color_body_text_3;
    }
  }
  .right-menu{
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .footer-menu{
    display: flex;
    flex-direction: column;
    padding-top: 46px;
    a{
      text-transform: uppercase;
      width: max-content;
      font-size: 12px;
      line-height: 16px;
      margin-bottom: 7px;
      &.active{
        font-weight: bold;
      }
    }
  }

  .social-icons{
    a{
      padding-left: 15px;
      padding-right: 15px;
    }
  }
}

/**  Section contact form   */
.section-contact-form{
  margin-bottom: 10px;
  .contact-form-container{
    display: flex;
    justify-content: space-between;
    min-height: 465px;
    margin-top: 125px;
    border: 1px solid $border-custom-color;
    box-sizing: border-box;
    box-shadow: 0 25px 100px rgba(0, 0, 0, 0.07);
    border-radius: 10px;
    overflow: hidden;
    .contact-form{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 450px;
      max-width: 100%;
      margin: 0 auto;
      .form-title{
        font-size: 40px;
        margin-bottom: 60px;
      }
      form{
        width: 100%;
      }
      .form-status{
        text-align: center;
        padding-bottom: 20px;
        font-weight: bold;
        .alert--success{
          color: #73bc66;
        }
        .alert__error-list{
          color: $color_first;
        }
      }
      .btn{
        margin-bottom: 30px;
      }
    }
    .map{
      display: flex;
      border-radius: 10px;
      border: 1px solid $border-custom-color;
      margin-bottom: -1px;
      margin-top: -1px;
      position: relative;
      overflow: hidden;
      right: -2px;
      iframe{
        width: 490px;
        height: 100%;
      }
    }
  }
}

/**  Section: Product   */
.section-product-template{
  padding-top: 80px;
  padding-bottom: 80px;
  .product-template-content{
    display: flex;
    justify-content: space-between;
  }
  .product-image{
    width: calc(50% - 25px);
    img{
      width: 100%;
    }
  }
  .product-info{
    width: calc(50% - 25px);
    .product-title{
    }
    .product-price{
      font-weight: bold;
      font-size: 24px;
      line-height: 33px;
      color: $color_first;
      margin-bottom: 20px;
    }
    .product-description{
      font-size: 14px;
      line-height: 19px;
    }
    .btn#AddToCart{
      margin-top: 50px;
    }
  }
}


/** Section: Image row */
.section-images-row{
  margin-top: 10px;
  margin-bottom: 100px;
  .images-row{
    display: flex;
    justify-content: space-between;
    .image{
      width: 350px;
      img{
        width: 280px;
        margin: 0 auto;
        display: block;
      }
    }
  }
}

/** Section: Gallery grid */
.section-gallery-grid{
  margin-top: 160px;
  margin-bottom: 200px;
  .gallery-grid-container{
    display: grid;
    grid-gap: 16px;
    grid-template-columns: repeat(12, 1fr);
    .image{
      grid-column: span 1;
      grid-row: span 1;
      display: flex;
      img{
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
  }
}

/** Section: Team */


/** Swiper custom style */
.swiper-pagination-bullet{
  background-color: $color_first;
}
.swiper-button-next:after, .swiper-button-prev:after{
  font-weight: 900;
  font-size: 22px;
}
.swiper-button-next, .swiper-button-prev{
  color: $color_first;
}