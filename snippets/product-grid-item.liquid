<div class="product-grid-item">
	<a href="{{ product.url }}">
		<span class="img-wrap">
			<img class="product-img lazyload"
				 src="{{ product.featured_image | img_url: '1x1' }}"
				 data-src="{{ product.featured_image | img_url: '200x200' }}"
				 alt="{{ product.featured_image.alt }}" />
		</span>
		<span class="product-info">
			<div class="product-title">{{ product.title }}</div>
			<div class="product-price"><strong>{{ product.price | money }}</strong></div>
			<span class="desc">{{ product.description | strip_html }}</span>
		</span>
	</a>
</div>